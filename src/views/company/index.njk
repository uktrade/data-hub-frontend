{% extends "layouts/ukti.njk" %}

{% block main %}
<h1 class="visually-hidden">Company Details</h1>
<h2 class="page-heading">
    {{ headingName }}
    <span class="post-header">{{ headingAddress }}</span>
</h2>

{% include "company/archive.njk" %}

<div class="left-nav-container">
  <div class="left-nav">
    <nav>
      <a class="{% if tab == 'details' %}active{% endif %}" href="{{companyUrl}}">Company details</a>
      {% if company.id %}
        <a class="{% if tab == 'hierarchy' %}active{% endif %}" href="">Company hierarchy</a>
        <a class="{% if tab == 'contacts' %}active{% endif %}" href="/company-contacts/{{company.id}}">Contacts</a>
        <a class="{% if tab == 'interactions' %}active{% endif %}" href="/company-interactions/{{company.id}}">Interactions</a>
        <a class="{% if tab == 'documents' %}active{% endif %}" href="">Documents</a>
        <a class="{% if tab == 'exports' %}active{% endif %}" href="/company-exports/view/{{company.id}}">Exports</a>
        <a class="{% if tab == 'investment' %}active{% endif %}" href="">Investment</a>
      {% endif %}
    </nav>
  </div>
  <div class="right-content">
    {% block tabmain%}{% endblock %}
  </div>
</div>

{% endblock %}
