{
  "extends": "standard",
  "plugins": [
    "mocha"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ],
    "object-curly-spacing": ["error", "always"],
    "dot-notation": "error",
    "mocha/no-exclusive-tests": "error",
    "import/newline-after-import": ["warn", { "count": 1 }]
  }
}
