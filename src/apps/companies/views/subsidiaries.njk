{% extends "_layouts/template.njk" %}

{% block local_header %}
  {{ LocalHeader({
    heading: heading,
    modifier: 'light-banner',
    fullWidthContent: true
  }) }}
{% endblock %}

{% block body_main_content %}

  <p>
    This hierarchy information is manually recorded (linked) by Data Hub users. This means it can be different from the Dun & Bradstreet hierarchy, which in the future will replace this manually recorded information.
  </p>

  {% if company.archived %}
    {{ govukDetails({
      summaryText: 'Why can I not link a subsidiary?',
      html: 'Subsidiaries cannot be linked to an archived company.
        <a href="/companies/' + company.id + '/unarchive">Click here to unarchive</a>',
      attributes: {
        'data-test': 'subsidiariesWhyArchived'
      }
    }) }}
  {% endif %}

  {{ CollectionContent(subsidiaries) }}

{% endblock %}
