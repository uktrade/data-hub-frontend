{% extends "_layouts/two-column.njk" %}

{% block main_heading %}
  <h1 class="visually-hidden">Contact Details</h1>
  <h2 class="page-heading">
    {{contact.first_name}} {{contact.last_name}}
    {% if contact.primary == true %}{{trade.statusbadge('Primary', variation="fuschia")}}{% endif %}
    <span class="post-header"><a href="{{companyUrl}}">{{contact.company.name}}</a></span>
  </h2>

  {% if contact.archived %}
    <p class="infostrip">
      This contact has been archived on {{contact.archived_on | formatDate}} by {{contact.archived_by.first_name}} {{contact.archived_by.last_name}}.<br>
      <strong>Reason:</strong> {{contact.archived_reason}}<br>
      <br>
      <a href="/contact/{{contact.id}}/unarchive">Unarchive</a>
    </p>
  {% endif %}
{% endblock %}

{% block main_grid_left_column %}
  <nav class="local-nav">
    <a class="local-nav__link {% if tab == 'details' %}is-active{% endif %}" href="/contact/{{id}}/details">Details</a>
    <a class="local-nav__link {% if tab == 'interactions' %}is-active{% endif %}" href="/contact-interactions/{{id}}">Interactions</a>
  </nav>
{% endblock %}
