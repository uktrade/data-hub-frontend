{% extends "_layouts/collection.njk" %}

{% block content %}
  <div data-test="opportunities-note">
    <p>This section is for major energy, infrastructure and real estate capital investment 
    opportunities that have been approved for promotion by the gateway panel run by the 
    Investment Directorate’s Opportunities & Propositions team.
    </p>
    <p>Only opportunities that have received panel approval should be added to this section.</p>

    <p>For further information email <a href="mailto:capitalinvestment@trade.gov.uk">capitalinvestment@trade.gov.uk</a></p>
  </div>
  <div id="investors-uk-opportunities-tab">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ TabbedLocalNav({ items: investmentTabItems }) }}
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {% component 'react-slot', {
            id: 'unfiltered-large-capital-opportunity-collection',
            props: props
          }
          %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
