{% extends "_layouts/datahub-base.njk" %}

{% block body_main_header_content %}
  <h2 class="heading-xlarge">Sign in</h2>
{% endblock %}

{% block body_main_content %}
  {% call Form(form | assign({ buttonText: 'Sign in' })) %}
    {{ TextField({
      autofocus: true,
      name: 'username',
      label: 'Email address'
    }) }}
    {{ TextField({
      type: 'password',
      name: 'password',
      label: 'Password'
    }) }}
  {% endcall %}
{% endblock %}
